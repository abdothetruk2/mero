# Example Nginx configuration for proxying Socket.IO connections
server {
    listen 80;
    server_name mero2.up.railway.app;

    # Proxy WebSocket connections for Socket.IO
    location /socket.io/ {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;

        # Adjust the backend URL and port as necessary
        proxy_pass http://localhost:3000/socket.io/;
    }

    # Other location blocks, like serving static files
    location / {
        root /usr/share/nginx/html;
        index index.html;
    }
}
